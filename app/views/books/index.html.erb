<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.image %>" style="width:228px;height:304px;"></td>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <%if logged_user?%>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if logged_user?%>
  <%= link_to t(:new_book), new_book_path %>
<%end%>